<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/numeric_1"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.1" />

            <Button
                android:id="@+id/numeric_2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/keyboard.key.2" />

            <Button
                android:id="@+id/numeric_3"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/keyboard.key.3" />

            <Button
                android:id="@+id/numeric_unlimited"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/keyboard.key.unlimited" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/numeric_4"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.4" />

            <Button
                android:id="@+id/numeric_5"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.5" />

            <Button
                android:id="@+id/numeric_6"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.6" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/numeric_7"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.7" />

            <Button
                android:id="@+id/numeric_8"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.8" />

            <Button
                android:id="@+id/numeric_9"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.9" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/numeric_00"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.00" />

            <Button
                android:id="@+id/numeric_0"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="@string/keyboard.key.0" />

            <ImageButton
                android:id="@+id/numeric_backspace"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textSize="16sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/numeric_done"
        android:layout_width="110dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>